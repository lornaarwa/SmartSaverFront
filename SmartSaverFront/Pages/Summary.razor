@page "/summary"
@using SmartSaverFront.Models

<h1>Summary</h1>

<div class="summary-cards">
    <div class="card income">
        <h3>Total Income</h3>
        <p>@totalIncome.ToString("C")</p>
    </div>
    <div class="card expenses">
        <h3>Total Expenses</h3>
        <p>@totalExpense.ToString("C")</p>
    </div>
    <div class="card balance">
        <h3>Balance</h3>
        <p>@balance.ToString("C")</p>
    </div>
</div>

@code {
    decimal totalIncome => transactions.Where(t => t.Type == "Income").Sum(t => t.Amount);
    decimal totalExpense => transactions.Where(t => t.Type == "Expense").Sum(t => t.Amount);
    decimal balance => totalIncome - totalExpense;

    // You can bring this from Home or use cascading values
    [CascadingParameter] public List<Tx> transactions { get; set; } = new();
}

<style>
    .summary-cards {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .card {
        flex: 1;
        padding: 1.5rem;
        border-radius: 0.5rem;
        color: #fff;
        text-align: center;
    }

    .income {
        background-color: #6a0dad;
    }
    /* purple */
    .expenses {
        background-color: #b30000;
    }
    /* red */
    .balance {
        background-color: #008080;
    }
    /* teal */
</style>
