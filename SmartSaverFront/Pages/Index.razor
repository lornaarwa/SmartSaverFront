@page "/"

<h1>Welcome to SmartSaver</h1>
<p class="lead">A simple front-end demo: add transactions and goals locally (no backend).</p>

<div class="card">
    <h3>Add Transaction</h3>
    <input placeholder="Description" @bind="txDesc" />
    <select @bind="txType">
        <option value="Expense">Expense</option>
        <option value="Income">Income</option>
    </select>
    <input type="number" step="0.01" @bind="txAmount" />
    <button @onclick="AddTx">Add</button>
</div>

<div class="card">
    <h3>Add Goal</h3>
    <input placeholder="Goal name" @bind="goalName" />
    <input type="number" step="0.01" placeholder="Target" @bind="goalTarget" />
    <button @onclick="AddGoal">Add Goal</button>
</div>

<h3>Recent Transactions</h3>
<table class="table">
    <thead><tr><th>Date</th><th>Type</th><th>Description</th><th>Amount</th></tr></thead>
    <tbody>
        @foreach (var t in transactions)
        {
            <tr>
                <td>@t.Date.ToString("yyyy-MM-dd")</td>
                <td>@t.Type</td>
                <td>@t.Description</td>
                <td>@t.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

@code {
    record Tx(DateTime Date, string Type, string Description, decimal Amount);
    record Goal(string Name, decimal Target, decimal Current);

    private List<Tx> transactions = new();
    private List<Goal> goals = new();

    private string txDesc = "";
    private string txType = "Expense";
    private decimal txAmount = 0;

    private string goalName = "";
    private decimal goalTarget = 0;

    void AddTx()
    {
        if (txAmount <= 0) return;
        transactions.Insert(0, new Tx(DateTime.Now, txType, txDesc, txAmount));
        txDesc = ""; txAmount = 0;
        StateHasChanged();
    }

    void AddGoal()
    {
        if (string.IsNullOrWhiteSpace(goalName) || goalTarget <= 0) return;
        goals.Add(new Goal(goalName, goalTarget, 0));
        goalName = ""; goalTarget = 0;
    }
}

<style>
    .card {
        background-color: #111;
        border: 1px solid #00ff00;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 10px;
    }

    input, select {
        background-color: #222;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 0.5rem;
        margin: 0.25rem 0.5rem 0.5rem 0;
        border-radius: 5px;
    }

    button {
        background-color: #00ff00;
        color: #0e0e0e;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #00cc00;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 0.5rem;
        text-align: left;
        border-bottom: 1px solid #00ff00;
    }

    th {
        color: #00ff00;
    }

    h1, h3, .lead {
        color: #00ff00;
    }
</style>


